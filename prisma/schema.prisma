generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Client {
  id_client     String     @id
  nom           String
  prenom        String
  email         String?    @unique
  tel           String?
  type_personne String?
  vehicule      Vehicule[]
}

model Vehicule {
  id_vehicule        String               @id
  marque             String
  modele             String
  annee              Int
  kilometrage        Int
  matricule          String
  numeroSerie        String?
  clientId           String?
  client             Client?              @relation(fields: [clientId], references: [id_client])
  VehiculeHistorique VehiculeHistorique[]
}

model VehiculeHistorique {
  id_vehicule_historique String    @id
  vehiculeId             String?
  date_historique        DateTime
  kilometrage            Int?
  pieceId                String?
  serviceId              String?
  libelle_pieceouservice String?
  remarque               String?
  vehicule               Vehicule? @relation(fields: [vehiculeId], references: [id_vehicule])
  service                Service?  @relation(fields: [serviceId], references: [id_service])
  piece                  Piece?    @relation(fields: [pieceId], references: [id_piece])
}

model Service {
  id_service         String               @id
  libelle            String
  VehiculeHistorique VehiculeHistorique[]
}

model Piece {
  id_piece           String               @id
  libelle            String
  quantite           Int
  CommandeLine       CommandeLine[]
  VehiculeHistorique VehiculeHistorique[]
}

enum CommandeEtat {
  EN_ATTENTE
  VALIDE
  LIVREE
  ANNULEE
}

model Commande {
  id_commande   String         @id
  fournisseurId String
  etat          CommandeEtat?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  lines         CommandeLine[]
  fournisseur   Fournisseur?   @relation(fields: [fournisseurId], references: [id_fournisseur])
}

model CommandeLine {
  id_line    Int       @id @default(autoincrement())
  commandeId String
  pieceId    String
  quantite   Int
  prix_unite Float
  prix_total Float
  piece      Piece?    @relation(fields: [pieceId], references: [id_piece])
  commande   Commande? @relation(fields: [commandeId], references: [id_commande])
}

model Fournisseur {
  id_fournisseur String     @id
  nom            String
  prenom         String
  email          String     @unique
  tel            String
  Commande       Commande[]
}

model MarqueModel {
  id     String @id
  marque String
  model  String

  @@unique([marque, model])
}
